{
  "name": "@nrfcloud/device-simulator-v2",
  "version": "1.1.4-beta.2",
  "description": "AWS IoT Thing simulator for nRF91",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./dist/cli.js",
  "scripts": {
    "build": "npx tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "npm run tslint && npm run prettier:lint",
    "tslint": "tslint --project ./tsconfig.json",
    "prettier": "prettier --write \"./src/*.ts\"",
    "prettier:lint": "prettier --list-different \"./src/*.ts\"",
    "schemas2ts": "json2ts schemas/message.schema.json src/app/appMessage.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nRFCloud/device-simulator-v2.git"
  },
  "author": "Nordic Semiconductor ASA | nordicsemi.no",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/nRFCloud/device-simulator-v2/issues"
  },
  "homepage": "https://github.com/nRFCloud/device-simulator-v2#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-angular": "^8.0.0",
    "@nrfcloud/tslint-config": "^3.10.0",
    "@types/aws-iot-device-sdk": "^2.1.1",
    "@types/dotenv": "^6.1.1",
    "@types/jest": "^24.0.11",
    "@types/node": "^12.0.7",
    "@types/uuid": "^3.4.4",
    "husky": "^2.4.0",
    "json-schema-to-typescript": "^7.1.0",
    "lint-staged": "^8.2.0",
    "prettier": "^1.18.1",
    "tslint": "^5.17.0",
    "typescript": "^3.5.1"
  },
  "dependencies": {
    "aws-iot-device-sdk": "^2.2.1",
    "aws-sdk": "^2.470.0",
    "axios": "^0.19.0",
    "colors": "^1.3.2",
    "commander": "^2.19.0",
    "event-stream": "^4.0.1",
    "ez-cache": "^1.0.1",
    "tcomb": "^3.2.28",
    "uuid": "^3.3.2"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branch": "saga",
    "remoteTags": true
  },
  "files": [
    "package-lock.json",
    "dist",
    "bin",
    "scripts",
    "README.md",
    "LICENSE"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "lint-staged && npx tsc"
    }
  },
  "lint-staged": {
    "*.ts": [
      "tslint --project ./tsconfig.json --fix",
      "prettier --write",
      "git add"
    ]
  }
}
